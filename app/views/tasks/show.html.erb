 <div class="row">
  <div>
    <h1>ID: <%= @task.id %> のタスク詳細ページ</h1>
    <div>
      <p>ステータス: <%= @task.status %></p>
      <p>タスク: <%= @task.content %></p>
    </div>
    <div>
      <%= link_to "一覧に戻る", tasks_path, class: "btn btn-primary btn-sm" %>
      <%= link_to 'タスクを編集する', edit_task_path(@task), class: "btn btn-secondary btn-sm" %>
      <%= link_to '削除', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger btn-sm'  %>
    </div>
  </div>
  
</div>